{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run preflight:env && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "VITE_NHOST_BACKEND_URL": "${VITE_NHOST_BACKEND_URL}",
    "VITE_NHOST_FUNCTIONS_URL": "${VITE_NHOST_FUNCTIONS_URL}",
    "VITE_APP_ENV": "${VITE_APP_ENV}",
    "VITE_APP_VERSION": "${VITE_APP_VERSION}",
    "VITE_MAINTENANCE_MODE": "${VITE_MAINTENANCE_MODE}",
    "VITE_SENTRY_DSN": "${VITE_SENTRY_DSN}",
    "VITE_SENTRY_TRACES_SAMPLE_RATE": "${VITE_SENTRY_TRACES_SAMPLE_RATE}",
    "VITE_SENTRY_REPLAY_SAMPLE_RATE": "${VITE_SENTRY_REPLAY_SAMPLE_RATE}",
    "VITE_API_BASE_URL": "${VITE_API_BASE_URL}"
  }
}
